<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_screen"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="150dp"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/slogo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/s1_title"
        android:textSize="@dimen/intro_slide_title"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/splash3_title"
        android:fontFamily="@font/varela_round_regular"
        android:textColor="@color/primary_text_color"
        android:textStyle="bold" />

    <TextView
        android:textSize="@dimen/intro_slide_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/s1_title"
        android:padding="20dp"
        android:text="@string/splash3_content"
        android:layout_width="match_parent"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/secondary_text_color"
        android:layout_height="wrap_content" />

</RelativeLayout>