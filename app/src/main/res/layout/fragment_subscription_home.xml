<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_screen"
    android:layout_height="match_parent">



    <TextView
        style="@style/TitleTextViewStyle"
        android:gravity="center"
        android:text="@string/subscription_home_title"
        android:layout_marginTop="160dp"
        />

    <TextView
        style="@style/LightTextViewStyle"
        android:layout_marginTop="216dp"
        android:text="@string/subscription_home_item_1"
        android:drawableLeft="@drawable/ic_subscription_check"
        android:layout_marginLeft="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_subscription_check"
        android:layout_marginStart="20dp" />

    <TextView
        style="@style/LightTextViewStyle"
        android:layout_marginTop="264dp"
        android:text="@string/subscription_home_item_2"
        android:drawableLeft="@drawable/ic_subscription_check"
        android:layout_marginLeft="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_subscription_check"
        android:layout_marginStart="20dp" />

    <TextView
        style="@style/LightTextViewStyle"
        android:layout_marginTop="312dp"
        android:text="@string/subscription_home_item_3"
        android:drawableLeft="@drawable/ic_subscription_check"
        android:layout_marginLeft="20dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_subscription_check"
        android:layout_marginStart="20dp" />

    <Button
        style="@style/ButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="514dp"
        android:id="@+id/btn_subcribe"
        android:text="@string/subscription_home_button_text"
        />


    <TextView
        style="@style/ActionBoldTextViewStyle"
        android:layout_marginTop="592dp"
        android:id="@+id/link_skip"
        android:gravity="center_horizontal"
        android:text="@string/subscription_home_link"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>