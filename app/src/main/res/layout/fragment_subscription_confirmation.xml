<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_credit_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_screen"
    android:paddingTop="25dp"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_subs"
        layout="@layout/toolbar_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_welcome"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_confirmation"/>

    <TextView
        style="@style/TitleTextViewStyle"
        android:id="@+id/confirmation_txt_title"
        android:gravity="center_horizontal"
        android:layout_marginTop="308dp"
        android:text="@string/welcome_text"
        />

    <TextView
        android:layout_marginTop="348dp"
        android:id="@+id/confirmation_txt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        />

    <Button
        android:id="@+id/btn_enter_sand_home"
        style="@style/ButtonStyle"
        android:layout_gravity="center_horizontal"
        android:text="@string/confirmation_btn_text"
        android:layout_marginTop="420dp"
        />




</FrameLayout>