<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_screen"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slogo"
        style="@style/ImageStyle"
        android:src="@drawable/ic_notrace"
        />

    <com.cybercrypt.sandvmi.ui.widget.SandTextView
        style="@style/SandTextView.VarelaRound.Title1"
        android:layout_marginTop="314dp"
        android:gravity="center_horizontal"
        android:text="@string/splash2_title"
        android:textColor="@color/primary_text_color"
        app:applyLetterSpace="true"
        />

    <com.cybercrypt.sandvmi.ui.widget.SandTextView
        android:gravity="center_horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        style="@style/SandTextView.RobotoLight.Medium"
        android:layout_marginTop="354dp"
        android:text="@string/splash2_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text_color"
        app:applyLetterSpace="true"
        />

</FrameLayout>